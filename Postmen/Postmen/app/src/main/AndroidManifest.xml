<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.post.postmen" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.AddAdressActivity"
            android:label="@string/title_activity_add_adress"
            android:parentActivityName=".app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.post.postmen.app.MainActivity" />
        </activity>
        <activity
            android:name=".app.ShowAdressesActivity"
            android:label="@string/title_activity_show_adresses"
            android:parentActivityName=".app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.post.postmen.app.MainActivity" />
        </activity>
        <activity
            android:name=".app.AddParcelsActivity"
            android:label="@string/title_activity_add_parcels"
            android:parentActivityName=".app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.post.postmen.app.MainActivity" />
        </activity>
        <activity
            android:name=".app.TourActivity"
            android:label="@string/title_activity_tour"
            android:parentActivityName=".app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.post.postmen.app.MainActivity" />
        </activity>
    </application>

</manifest>
